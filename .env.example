# ===========================================
# ZKP Ledger System - Environment Configuration
# ===========================================
# Copy this file to .env and fill in your values

# Database
DATABASE_URL=postgresql://postgres:password@localhost:5432/zkp_ledger

# Redis
REDIS_URL=redis://localhost:6379

# MinIO (S3-compatible storage)
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=zkp-proofs
MINIO_USE_SSL=false

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRATION=24h

# Service URLs (for inter-service communication)
LEDGER_SERVICE_URL=http://localhost:3000
PROVER_COORDINATOR_URL=http://localhost:3001
API_GATEWAY_URL=http://localhost:3005

# ===========================================
# Blockchain Configuration
# ===========================================
# For local development with Anvil:
BLOCKCHAIN_RPC_URL=http://localhost:8545
CHAIN_ID=31337
BLOCKCHAIN_PRIVATE_KEY=0xac0974bec39a17e36ba4a6b4d238ff944bacb478cbed5efcae784d7bf4f2ff80

# Contract addresses (deployed to local Anvil - deterministic)
GROTH16_VERIFIER_ADDRESS=0x5FbDB2315678afecb367f032d93F642f64180aa3
BATCH_VERIFIER_ADDRESS=0xe7f1725E7734CE288F8367e1Bb143E90bb3F0512

# ===========================================
# Service Ports
# ===========================================
LEDGER_SERVICE_PORT=3000
PROVER_COORDINATOR_PORT=3001
PROVER_WORKER_PORT=3002
ROLLUP_AGGREGATOR_PORT=3003
CREDENTIAL_ISSUER_PORT=3004
API_GATEWAY_PORT=3005
IDENTITY_SERVICE_PORT=3007
STARTUP_SERVICE_PORT=3008
INVESTOR_SERVICE_PORT=3009
WEB_PORT=3006

# ===========================================
# Monitoring & Observability
# ===========================================
LOG_LEVEL=info
ENABLE_METRICS=true
METRICS_PORT=9090

# ===========================================
# Circuit Configuration
# ===========================================
CIRCUIT_PATH=./circuits
METRICS_THRESHOLD_WASM=metrics_threshold.wasm
METRICS_THRESHOLD_ZKEY=metrics_threshold_final.zkey
VERIFICATION_KEY=verification_key.json
